<?xml version="1.0" encoding="UTF-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:ws="wykonawca"
           targetNamespace="wykonawca">
    <xs:complexType name="artysta">
        <xs:sequence>
            <xs:element type="xs:string" name="imie" ></xs:element>
            <xs:element type="xs:string" name="nazwisko"></xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:simpleType name="ocenaType">
        <xs:restriction base="xs:decimal">
            <xs:fractionDigits value="2"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:complexType name="wykonawcaType">
        <xs:sequence>
            <xs:choice>
                <xs:element type="xs:string" name="zespół"/>
                <xs:element type="ws:artysta" name="artysta"/>
            </xs:choice>
            <xs:element type="ws:ocenaType" name="ocena"/>
        </xs:sequence>
        <xs:attribute name="id" use="required">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:pattern value="_[0-9]+"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>
</xs:schema>